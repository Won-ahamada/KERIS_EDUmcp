{
  "$schema": "./schemas/providers-config.schema.json",
  "version": "1.0.0",
  "description": "MCP 서버 Provider 통합 설정",
  "updatedAt": "2025-11-04",
  "providers": [
    {
      "id": "school-alrimi",
      "enabled": true,
      "priority": 1,
      "config": {
        "apiKeyEnv": "SCHOOL_ALRIMI_API_KEY",
        "baseUrl": "http://www.schoolinfo.go.kr/openApi.do",
        "timeout": 30000,
        "retryPolicy": {
          "maxAttempts": 3,
          "backoffMs": 1000,
          "statusCodes": [429, 500, 503]
        },
        "cache": {
          "enabled": true,
          "defaultTtl": 86400,
          "strategy": "memory"
        }
      },
      "specFile": "./school-alrimi-api-spec.json",
      "tags": ["education", "schools", "statistics", "public-data"],
      "status": "production"
    },
    {
      "id": "riss",
      "enabled": true,
      "priority": 2,
      "config": {
        "apiKeyEnv": "RISS_API_KEY",
        "baseUrl": "http://www.riss.kr/openApi",
        "timeout": 10000,
        "retryPolicy": {
          "maxAttempts": 3,
          "backoffMs": 1000,
          "statusCodes": [429, 500, 503]
        },
        "cache": {
          "enabled": true,
          "defaultTtl": 600,
          "strategy": "memory"
        },
        "responseFormat": "xml",
        "xmlOptions": {
          "ignoreNodes": ["script"],
          "normalizations": [
            {
              "type": "booleanFromYN",
              "fields": ["riss.abstract", "riss.toc", "riss.image"]
            },
            {
              "type": "integerFromString",
              "fields": ["riss.pubdate"]
            }
          ]
        }
      },
      "specFile": "./riss-api-spec.json",
      "tags": ["academic", "thesis", "research", "university"],
      "status": "production"
    }
  ],
  "globalSettings": {
    "defaultTimeout": 30000,
    "maxConcurrentRequests": 10,
    "logging": {
      "level": "info",
      "format": "json",
      "destinations": ["console", "file"]
    },
    "cache": {
      "maxMemoryMb": 256,
      "evictionPolicy": "lru"
    },
    "monitoring": {
      "enabled": true,
      "metricsPort": 9090,
      "healthCheckPath": "/health"
    }
  },
